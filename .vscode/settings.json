{
  // importSorter
  "importSorter.generalConfiguration.sortOnBeforeSave": true,
  "importSorter.importStringConfiguration.quoteMark": "double",
  "importSorter.sortConfiguration.removeUnusedImports": true,
  "importSorter.sortConfiguration.removeUnusedDefaultImports": true,
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.type": "words",
  "importSorter.importStringConfiguration.tabSize": 2,
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    { "orderLevel": 1, "regex": "^(next)(.*?)" },
    { "orderLevel": 100, "regex": "^(react|react-dom)$" },
    { "orderLevel": 200, "regex": "^(styled-components)(.*?)" },
    { "orderLevel": 300, "regex": "^(_/(api|db|docker|github))(.*?)" },
    { "orderLevel": 301, "regex": "^(_/theme)(.*?)" },
    { "orderLevel": 400, "regex": "^(_/styles)(.*?)" },
    { "orderLevel": 400, "regex": "^(_/components)(.*?)" },
    { "orderLevel": 400, "regex": "^(_/app)(.*?)" },
    { "orderLevel": 9999, "regex": "^_/(.*?)" },
    { "orderLevel": 201, "regex": "^(.*?)" }
  ],
  // typescript
  "typescript.tsserver.experimental.enableProjectDiagnostics": true
}
